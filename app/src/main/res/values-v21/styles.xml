<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="ActionBarNoElevation" parent="AppTheme">
        <item name="elevation">0dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppThemeNoElevation" parent="AppTheme">
        <item name="android:actionBarStyle">@style/ActionBarNoElevation</item>
    </style>

    <style name="CustomDialogActivity" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Batman" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimaryBatman</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkBatman</item>
        <item name="colorAccent">@color/colorAccentBatman</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Daredevil" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimaryDaredevil</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkDaredevil</item>
        <item name="colorAccent">@color/colorAccentDaredevil</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDarkDaredevil</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Hulk" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryHulk</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkHulk</item>
        <item name="colorAccent">@color/colorAccentHulk</item>
        <item name="android:navigationBarColor">@color/material_grey_850</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Wolverine" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryWolverine</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkWolverine</item>
        <item name="colorAccent">@color/colorAccentWolverine</item>
        <item name="android:navigationBarColor">@color/material_grey_800</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.GreenArrow" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimaryGreenArrow</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkGreenArrow</item>
        <item name="colorAccent">@color/colorAccentGreenArrow</item>
        <item name="android:navigationBarColor">@color/colorPrimaryGreenArrow</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>