<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/module_card_card_view"
    android:transitionName="test"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    android:foreground="?selectableItemBackground"
    android:clickable="true"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="4dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/module_card_shared_linear_layout"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/module_card_title"
            android:text="@string/module_list_title"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:transitionName="title"
            />

        <TextView
            android:id="@+id/module_card_total_topics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/module_topics"
            android:paddingBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:transitionName="totalTopics"
            />

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:id="@+id/module_card_progress_bar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:max="10000"
            android:transitionName="progressBar"/>

    </LinearLayout>

</android.support.v7.widget.CardView>